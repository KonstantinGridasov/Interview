<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="?android:colorPrimary"
    android:gravity="start|center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbar_back"
        android:layout_width="@dimen/_12gkdp"
        android:layout_height="@dimen/_12gkdp"
        android:layout_marginStart="@dimen/_5gkdp"
        android:layout_marginEnd="@dimen/_15gkdp"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/toolbar_text"
        style="@style/StyleToolBarText"
        android:layout_width="wrap_content"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10gkdp"
        android:gravity="center_vertical"
        android:text="@string/category" />

</LinearLayout>