<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.text.Html" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.gkreduction.roadmap.ui.main.fragment.exam.ExamViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/next"
            android:layout_marginBottom="@dimen/_5gkdp"
            android:background="@color/colorBackgroundDay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5gkdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/comfortaa_bold"
                    android:onClick="@{listener}"
                    android:padding="@dimen/_5gkdp"
                    android:text="@{viewModel.question}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11gkdp" />


                <TextView
                    android:id="@+id/textAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5gkdp"
                    android:background="@color/white"
                    android:fontFamily="@font/comfortaa_regular"
                    android:paddingStart="@dimen/_5gkdp"
                    android:paddingEnd="@dimen/_5gkdp"
                    android:text="@{viewModel.answer}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10gkdp"
                    android:visibility="gone" />


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5gkdp"
            android:background="@color/white"
            android:fontFamily="@font/comfortaa_bold"
            android:onClick="@{listener}"
            android:padding="@dimen/_5gkdp"
            android:text="Next"
            android:textColor="@color/black"
            android:textSize="@dimen/_11gkdp" />
    </RelativeLayout>

</layout>