<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5gkdp"
            android:background="@drawable/background_rounded_bottom" />

        <LinearLayout
            android:id="@+id/root_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5gkdp"
            android:background="@drawable/background_rounded_top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginStart="@dimen/_5gkdp"
                android:layout_marginTop="@dimen/_2gkdp"
                android:layout_marginEnd="@dimen/_5gkdp"
                android:layout_marginBottom="@dimen/_3gkdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_name_section"
                android:textSize="@dimen/_10gkdp" />


        </LinearLayout>
    </LinearLayout>


</layout>